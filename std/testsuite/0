# shellcheck shell=bash

@src(){
    while [ $# -gt 0 ]; do
        #shellcheck disable=SC1090
        source "$(dirname "${BASH_SOURCE[0]:-${(%):-%x}}")/../../$1"
        shift
    done
}

find "$(dirname "${BASH_SOURCE[0]:-${(%):-%x}}")"/*.test | while read -r i; do
    #shellcheck disable=SC1090
    ( source "$i" )
done

# source "${BASH_SOURCE[0]:-${(%):-%x}}")"/list.
