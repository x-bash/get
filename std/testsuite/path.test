# shellcheck shell=bash

@src std/path std/assert

test.path.abs(){
    assert.eq "$(path.abs .)" "$(pwd)"
    assert.eq "$(path.abs /tmp)" "/tmp"

    # path.abc doesn't change the current work directory
    local origin
    origin=$(pwd)
    path.abs /tmp 1>/dev/null 2>&1
    assert.eq "$(pwd)" "$origin"
}

test.path.filename_extensions(){
    assert.eq "$(path.filename /c/d/e/a.txt.tar.gz)" "a.txt.tar"
    assert.eq "$(path.extension /c/d/e/a.txt.tar.gz)" "gz"
    assert.t [ -z "$(path.extension /c/d/e/a)" ]
}

test.path.abs
test.path.filename_extensions
